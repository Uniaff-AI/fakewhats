---
import { COPY } from '../content/copy';
import { siteConfig } from '../config/site-config';
const { popup } = COPY;
---

<div id="returnPopup" class="return-popup-backdrop" role="dialog" aria-modal="true" aria-label="–í–æ–∑–≤—Ä–∞—Ç –∫ –≤–∏–¥–µ–æ" style="display: none;">
  <div class="return-popup">
    <div class="vsl-container">
      <div class="vsl-overlay">

        <video id="returnVslVideo" src={siteConfig.images.videos.chatVsl} controls playsinline preload="none" controlsList="nodownload nofullscreen noremoteplayback noplaybackrate noplaypause"></video>
        
        <!-- –í–∏–Ω—å–µ—Ç–∫–∞ –¥–ª—è –∑–∞—Ç–µ–º–Ω–µ–Ω–∏—è -->

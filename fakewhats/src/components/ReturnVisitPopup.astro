---
import { COPY } from '../content/copy';
import { siteConfig } from '../config/site-config';
const { popup } = COPY;
---

<div id="returnVisitPopup" class="return-visit-popup-backdrop" role="dialog" aria-modal="true" aria-label="–í–æ–∑–≤—Ä–∞—Ç –∫ –≤–∏–¥–µ–æ" style="display: none;">
  <div class="return-visit-popup">
    <div class="vsl-container">
      <div class="vsl-overlay">
        <div class="vsl-vignette"></div>
        <video id="returnVisitVideo" src={siteConfig.images.videos.chatVsl} controls playsinline preload="none" controlsList="nodownload nofullscreen noremoteplayback"></video>
        
        <!-- –ö—Ä–µ—Å—Ç–∏–∫ –¥–ª—è –∑–∞–∫—Ä—ã—Ç–∏—è VSL -->
        <button id="returnVisitVslCloseBtn" style="position: absolute; top: 10px; right: 10px; background: rgba(0, 0, 0, 0.7); color: white; border: none; border-radius: 50%; width: 40px; height: 40px; cursor: pointer; z-index: 8; font-size: 18px; pointer-events: auto;">‚úï</button>
        

        
        <!-- –ü–æ–ø–∞–ø –Ω–∞ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–Ω–æ–π –º–∏–Ω—É—Ç–µ VSL (—Å–∫—Ä—ã—Ç –∏–∑–Ω–∞—á–∞–ª—å–Ω–æ) -->
        <div id="returnVisitVslMidPopup" class="return-visit-vsl-mid-popup" style="display: none;">
          <!-- –ó–µ–ª–µ–Ω–∞—è –ø–ª–∞—à–∫–∞ —Å–≤–µ—Ä—Ö—É -->
          <div class="return-visit-vsl-mid-banner" onclick="showOrderFormModal();" style="cursor: pointer;">
            <div class="return-visit-vsl-mid-vignette"></div>
            <div>{siteConfig.texts.popups.vslMidPopup.title}</div>
            <div style="font-size: 14px; margin-top: 5px;">{siteConfig.texts.popups.vslMidPopup.subtitle}</div>
          </div>
        </div>
        
        <!-- –¢–µ–∫—Å—Ç –ø–æ–≤–µ—Ä—Ö –≤–∏–¥–µ–æ -->
        <div class="vsl-text-overlay">
          <div class="popup-text">
            <h3>{siteConfig.texts.popups.returnPopup.title}</h3>
            <p class="consequence">{siteConfig.texts.popups.returnPopup.consequence}</p>
            <p class="solution">{siteConfig.texts.popups.returnPopup.solution}</p>
            <p class="highlight">{siteConfig.texts.popups.returnPopup.highlight}</p>
            <p class="urgency">{siteConfig.texts.popups.returnPopup.urgency}</p>
          </div>
          <div class="popup-buttons">
            <button id="continueWatchingVisit" class="btn-primary">{siteConfig.texts.popups.returnPopup.continueButton}</button>
            <button id="textVersionVisit" class="btn-secondary">{siteConfig.texts.buttons.restartVideo}</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const returnVisitPopup = document.getElementById('returnVisitPopup');
  const returnVisitVideo = document.getElementById('returnVisitVideo');
  const continueVisitBtn = document.getElementById('continueWatchingVisit');
  const restartVisitBtn = document.getElementById('textVersionVisit');

  // –ó–∞–≥—Ä—É–∂–∞–µ–º —Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω–æ–µ –≤—Ä–µ–º—è –≤–∏–¥–µ–æ –∏–∑ localStorage
  let savedVideoTime = 0;
  const savedTimeFromStorage = localStorage.getItem('savedVideoTime');
  if (savedTimeFromStorage) {
    savedVideoTime = parseFloat(savedTimeFromStorage);
  }

  function showReturnVisitPopup() {
    returnVisitPopup.style.display = 'flex';
    if (returnVisitVideo) {
      // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –≤—Ä–µ–º—è –≤–∏–¥–µ–æ —Å —Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω–æ–≥–æ –º–æ–º–µ–Ω—Ç–∞
      returnVisitVideo.currentTime = savedVideoTime;
      
      // –ó–∞–ø—É—Å–∫–∞–µ–º –∞–≤—Ç–æ–≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ —Å –æ–±—Ö–æ–¥–æ–º –±–ª–æ–∫–∏—Ä–æ–≤–∫–∏
      startAutoplayWithBypass(returnVisitVideo);
      
      // –ù–∞—Å—Ç—Ä–∞–∏–≤–∞–µ–º –ø–æ–ø–∞–ø –Ω–∞ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–Ω–æ–π –º–∏–Ω—É—Ç–µ –¥–ª—è —ç—Ç–æ–≥–æ –≤–∏–¥–µ–æ
      console.log('üé¨ Setting up popup for returnVisitVideo');
      if (window.setupVslTimePopup) {
        console.log('üé¨ Calling window.setupVslTimePopup(returnVisitVideo)...');
        window.setupVslTimePopup(returnVisitVideo);
      } else {
        console.error('‚ùå window.setupVslTimePopup is not defined!');
      }

      // –û—Ç–∫—Ä—ã–≤–∞–µ–º —Ñ–æ—Ä–º—É –∑–∞–∫–∞–∑–∞ –∫–æ–≥–¥–∞ –≤–∏–¥–µ–æ –∑–∞–∫–æ–Ω—á–∏–ª–æ—Å—å
      returnVisitVideo.addEventListener('ended', function() {
        console.log('üé¨ Return visit video ended, showing order form');
        if (window.showOrderFormModal) {
          window.showOrderFormModal();
        }
      });
    }
  }

  function hideReturnVisitPopup() {
    // –°–æ—Ö—Ä–∞–Ω—è–µ–º —Ç–µ–∫—É—â–µ–µ –≤—Ä–µ–º—è –≤–∏–¥–µ–æ –ø–µ—Ä–µ–¥ –∑–∞–∫—Ä—ã—Ç–∏–µ–º
    if (returnVisitVideo) {
      saveVideoTime();
    }
    
    returnVisitPopup.style.display = 'none';
    if (returnVisitVideo) {
      returnVisitVideo.pause();
    }
  }



  function saveVideoTime() {
    if (returnVisitVideo && returnVisitVideo.currentTime > 0) {
      const currentTime = returnVisitVideo.currentTime;
      localStorage.setItem('savedVideoTime', currentTime.toString());
      
      const minutes = Math.floor(currentTime / 60);
      const seconds = Math.floor(currentTime % 60);
    }
  }

  // –§—É–Ω–∫—Ü–∏—è –ø–æ–∫–∞–∑–∞ –ø–æ–ø–∞–ø–∞ –Ω–∞ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–Ω–æ–π –º–∏–Ω—É—Ç–µ VSL
  function showReturnVisitVslMidPopup() {
    console.log('üéØ Showing return visit VSL mid popup');
    const popup = document.getElementById('returnVisitVslMidPopup');
    console.log('üéØ Popup element found:', !!popup);
    if (popup) {
      console.log('‚úÖ Return visit popup element found, showing...');
      console.log('üéØ Popup current display:', popup.style.display);
      console.log('üéØ Popup current z-index:', popup.style.zIndex);
      
      // –ü—Ä–∏–Ω—É–¥–∏—Ç–µ–ª—å–Ω–æ –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –ø–æ–ø–∞–ø
      popup.style.display = 'block';
      popup.style.opacity = '1';
      popup.style.visibility = 'visible';
      popup.style.zIndex = '1000';
      
      console.log('üéØ Popup display after change:', popup.style.display);
      console.log('üéØ Popup z-index after change:', popup.style.zIndex);
      console.log('‚úÖ Return visit popup should now be visible');
      
      // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ –±–∞–Ω–Ω–µ—Ä —Ç–æ–∂–µ –≤–∏–¥–µ–Ω
      const banner = popup.querySelector('.return-visit-vsl-mid-banner');
      if (banner) {
        console.log('‚úÖ Return visit banner element found');
        banner.style.zIndex = '1001';
        console.log('üéØ Return visit banner z-index set to:', banner.style.zIndex);
      } else {
        console.error('‚ùå Return visit banner element not found!');
      }
    } else {
      console.error('‚ùå Return visit popup element not found! returnVisitVslMidPopup does not exist in DOM');
      
      // –ü—Ä–æ–≤–µ—Ä–∏–º –≤—Å–µ —ç–ª–µ–º–µ–Ω—Ç—ã —Å –ø–æ—Ö–æ–∂–∏–º–∏ ID
      const allElements = document.querySelectorAll('[id*="popup"]');
      console.log('üéØ All elements with "popup" in ID:', Array.from(allElements).map(el => el.id));
    }
  }

  // –§—É–Ω–∫—Ü–∏—è –ø–æ–∫–∞–∑–∞ —Ñ–æ—Ä–º—ã –∑–∞–∫–∞–∑–∞
  function showOrderFormModal() {
    const orderFormModal = document.getElementById('orderFormModal');
    if (orderFormModal) {
      orderFormModal.style.display = 'flex';
      setTimeout(() => {
        orderFormModal.classList.add('show');
      }, 10);
    }
  }



  // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –¥–ª—è –∫—Ä–µ—Å—Ç–∏–∫–∞ –≤ ReturnVisitPopup
  const returnVisitVslCloseBtn = document.getElementById('returnVisitVslCloseBtn');
  returnVisitVslCloseBtn?.addEventListener('click', () => {
    // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –ø–æ–ø–∞–ø –≤—ã–±–æ—Ä–∞
    if (window.showVslCloseChoicePopup) {
      window.showVslCloseChoicePopup();
    }
  });

  // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ–±—Ö–æ–¥–∞ –±–ª–æ–∫–∏—Ä–æ–≤–∫–∏ –∞–≤—Ç–æ–≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏—è
  function startAutoplayWithBypass(video) {
    if (!video) return;
    
    // –°—Ç—Ä–∞—Ç–µ–≥–∏—è 1: –ü—Ä–æ–±—É–µ–º —Å –æ—Ç–∫–ª—é—á–µ–Ω–Ω—ã–º –∑–≤—É–∫–æ–º (—Ä–∞–±–æ—Ç–∞–µ—Ç –≤ –±–æ–ª—å—à–∏–Ω—Å—Ç–≤–µ –±—Ä–∞—É–∑–µ—Ä–æ–≤)
    video.muted = true;
    video.play().then(() => {
      console.log('‚úÖ Return visit video started playing (muted)');
      // –í–∫–ª—é—á–∞–µ–º –∑–≤—É–∫ —Å—Ä–∞–∑—É
      video.muted = false;
      console.log('üîä Sound enabled immediately');
    }).catch((error) => {
      console.log('‚ùå Muted autoplay failed:', error.name);
      
      // –°—Ç—Ä–∞—Ç–µ–≥–∏—è 2: –ü—Ä–æ–±—É–µ–º —Å –∑–∞–¥–µ—Ä–∂–∫–æ–π
      setTimeout(() => {
        video.muted = true;
        video.play().then(() => {
          console.log('‚úÖ Return visit video started playing (delayed muted)');
          // –í–∫–ª—é—á–∞–µ–º –∑–≤—É–∫ —Å—Ä–∞–∑—É
          video.muted = false;
          console.log('üîä Sound enabled immediately (delayed)');
        }).catch((error2) => {
          console.log('‚ùå Delayed autoplay failed:', error2.name);
          
          // –°—Ç—Ä–∞—Ç–µ–≥–∏—è 3: –ñ–¥–µ–º –≤–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–∏—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
          setupUserInteractionAutoplay(video);
        });
      }, 500);
    });
  }

  // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –∑–∞–ø—É—Å–∫–∞ –≤–∏–¥–µ–æ –ø–æ—Å–ª–µ –≤–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–∏—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
  function setupUserInteractionAutoplay(video) {
    let hasUserInteracted = false;
    
    // –°–æ–∑–¥–∞–µ–º –Ω–µ–≤–∏–¥–∏–º—É—é –∫–Ω–æ–ø–∫—É –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏—è
    const playButton = document.createElement('div');
    playButton.style.cssText = `
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: transparent;
      cursor: pointer;
      z-index: 1000;
    `;
    playButton.innerHTML = `
      <div style="
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 20px 40px;
        border-radius: 10px;
        font-size: 18px;
        text-align: center;
        pointer-events: none;
      ">
        ‚ñ∂Ô∏è –ù–∞–∂–º–∏—Ç–µ –¥–ª—è –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏—è
      </div>
    `;
    
    playButton.onclick = () => {
      if (!hasUserInteracted) {
        hasUserInteracted = true;
        playButton.remove();
        video.muted = false;
        video.play().then(() => {
          console.log('‚úÖ Return visit video started after user interaction');
        }).catch((error) => {
          console.error('‚ùå Failed to play after interaction:', error);
        });
      }
    };
    
    // –î–æ–±–∞–≤–ª—è–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è —Ä–∞–∑–ª–∏—á–Ω—ã—Ö —Ç–∏–ø–æ–≤ –≤–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–∏—è
    const interactionEvents = ['click', 'touchstart', 'keydown', 'mousedown'];
    interactionEvents.forEach(event => {
      playButton.addEventListener(event, () => {
        if (!hasUserInteracted) {
          hasUserInteracted = true;
          playButton.remove();
          video.muted = false;
          video.play().then(() => {
            console.log('‚úÖ Return visit video started after user interaction');
          }).catch((error) => {
            console.error('‚ùå Failed to play after interaction:', error);
          });
        }
      });
    });
    
    returnVisitPopup.appendChild(playButton);
  }

  // –≠–∫—Å–ø–æ—Ä—Ç–∏—Ä—É–µ–º —Ñ—É–Ω–∫—Ü–∏–∏ –¥–ª—è –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –≤ –¥—Ä—É–≥–∏—Ö –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–∞—Ö
  window.showReturnVisitPopup = showReturnVisitPopup;
  window.hideReturnVisitPopup = hideReturnVisitPopup;
  window.saveVideoTime = saveVideoTime;
  window.showReturnVisitVslMidPopup = showReturnVisitVslMidPopup;
  window.showOrderFormModal = showOrderFormModal;



  continueVisitBtn?.addEventListener('click', () => {
    // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤—Ä–µ–º—è –ø–µ—Ä–µ–¥ —Å–∫—Ä—ã—Ç–∏–µ–º —ç–ª–µ–º–µ–Ω—Ç–æ–≤
    if (returnVisitVideo) {
      saveVideoTime();
    }
    
    // –°–∫—Ä—ã–≤–∞–µ–º –Ω–∞–¥–ø–∏—Å–∏, –∫–Ω–æ–ø–∫–∏ –∏ –≤–∏–Ω—å–µ—Ç–∫—É
    const textOverlay = document.querySelector('.vsl-text-overlay');
    const vignette = document.querySelector('.vsl-vignette');
    
    if (textOverlay) {
      textOverlay.style.display = 'none';
    }
    if (vignette) {
      vignette.style.display = 'none';
    }
    
    // –£–±–∏—Ä–∞–µ–º –∫—É—Ä—Å–æ—Ä pointer —Å –≤–∏–¥–µ–æ –∏ –≤–æ–∑–æ–±–Ω–æ–≤–ª—è–µ–º –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ
    if (returnVisitVideo) {
      returnVisitVideo.style.cursor = 'default';
      
      // –í–æ–∑–æ–±–Ω–æ–≤–ª—è–µ–º –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ –≤–∏–¥–µ–æ
      if (returnVisitVideo.paused) {
        returnVisitVideo.play().then(() => {
          console.log('‚ñ∂Ô∏è Return visit video resumed from pause');
        }).catch((error) => {
          console.log('‚ùå Failed to resume return visit video:', error.name);
          // –ï—Å–ª–∏ –∞–≤—Ç–æ–ø–ª–µ–π –∑–∞–±–ª–æ–∫–∏—Ä–æ–≤–∞–Ω, –∏—Å–ø–æ–ª—å–∑—É–µ–º –æ–±—Ö–æ–¥
          startAutoplayWithBypass(returnVisitVideo);
        });
      }
    }
  });

  restartVisitBtn?.addEventListener('click', () => {
    if (returnVisitVideo) {
      // –°–±—Ä–∞—Å—ã–≤–∞–µ–º –≤—Ä–µ–º—è –≤–∏–¥–µ–æ –Ω–∞ –Ω–∞—á–∞–ª–æ
      returnVisitVideo.currentTime = 0;
      
      // –û—á–∏—â–∞–µ–º —Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω–æ–µ –≤—Ä–µ–º—è
      savedVideoTime = 0;
      localStorage.removeItem('savedVideoTime');
      
      // –ó–∞–ø—É—Å–∫–∞–µ–º –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ —Å –Ω–∞—á–∞–ª–∞ –∏—Å–ø–æ–ª—å–∑—É—è –æ–±—Ö–æ–¥ –±–ª–æ–∫–∏—Ä–æ–≤–∫–∏
      startAutoplayWithBypass(returnVisitVideo);
      
      // –ù–∞—Å—Ç—Ä–∞–∏–≤–∞–µ–º –ø–æ–ø–∞–ø –Ω–∞ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–Ω–æ–π –º–∏–Ω—É—Ç–µ –¥–ª—è –≤–∏–¥–µ–æ, –∫–æ—Ç–æ—Ä–æ–µ –Ω–∞—á–∏–Ω–∞–µ—Ç—Å—è —Å –Ω–∞—á–∞–ª–∞
      if (window.setupVslTimePopup) {
        window.setupVslTimePopup(returnVisitVideo);
      }
    }
    
    // –°–∫—Ä—ã–≤–∞–µ–º –Ω–∞–¥–ø–∏—Å–∏, –∫–Ω–æ–ø–∫–∏ –∏ –≤–∏–Ω—å–µ—Ç–∫—É (–∫–∞–∫ –ø—Ä–∏ –∫–ª–∏–∫–µ –Ω–∞ "–ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å")
    const textOverlay = document.querySelector('.vsl-text-overlay');
    const vignette = document.querySelector('.vsl-vignette');
    
    if (textOverlay) {
      textOverlay.style.display = 'none';
    }
    if (vignette) {
      vignette.style.display = 'none';
    }
    
    // –£–±–∏—Ä–∞–µ–º –∫—É—Ä—Å–æ—Ä pointer —Å –≤–∏–¥–µ–æ
    if (returnVisitVideo) {
      returnVisitVideo.style.cursor = 'default';
    }
  });

  // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–ª–∏–∫–∞ –Ω–∞ —Ñ–æ–Ω –ø–æ–ø–∞–ø–∞
  returnVisitPopup?.addEventListener('click', (e) => {
    if (e.target === returnVisitPopup) {
      hideReturnVisitPopup();
      // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –¥–æ–º–æ–Ω–µ—Ç–∫—É –ø—Ä–∏ –ø–æ–ø—ã—Ç–∫–µ –∑–∞–∫—Ä—ã—Ç—å –ø–æ–ø–∞–ø
      if (window.showDomonetkaForm) {
        window.showDomonetkaForm();
      }
    }
  });

  // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–ª–∏–∫–∞ –Ω–∞ –≤–∏–¥–µ–æ
  returnVisitVideo?.addEventListener('click', () => {
    // –ü—Ä–æ—Å—Ç–æ —Å–æ—Ö—Ä–∞–Ω—è–µ–º –≤—Ä–µ–º—è, –ù–ï –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –¥–æ–º–æ–Ω–µ—Ç–∫—É
  });

  // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –≤–∏–¥–µ–æ (–ø–µ—Ä–µ–º–æ—Ç–∫–∞ —Ä–∞–∑—Ä–µ—à–µ–Ω–∞)
  if (returnVisitVideo) {
    // –û—Ç–∫–ª—é—á–∞–µ–º —Ç–æ–ª—å–∫–æ –∫–æ–Ω—Ç–µ–∫—Å—Ç–Ω–æ–µ –º–µ–Ω—é
    returnVisitVideo.addEventListener('contextmenu', (e) => {
      e.preventDefault();
      return false;
    });
    
    // –ü–µ—Ä–µ–º–æ—Ç–∫–∞ —Ç–µ–ø–µ—Ä—å —Ä–∞–∑—Ä–µ—à–µ–Ω–∞ - —É–±–∏—Ä–∞–µ–º –≤—Å–µ –±–ª–æ–∫–∏—Ä–æ–≤–∫–∏
    console.log('‚úÖ Video seeking enabled for returnVisitVideo');
  }

  // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤—Ä–µ–º—è –≤–∏–¥–µ–æ –ø—Ä–∏ –ø–æ–ø—ã—Ç–∫–µ —É—Ö–æ–¥–∞ —Å–æ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
  document.addEventListener('visibilitychange', () => {
    if (document.hidden) {
      saveVideoTime();
    }
  });

  // –ü–µ—Ä–∏–æ–¥–∏—á–µ—Å–∫–∏ —Å–æ—Ö—Ä–∞–Ω—è–µ–º –≤—Ä–µ–º—è –≤–∏–¥–µ–æ –∫–∞–∂–¥—ã–µ 10 —Å–µ–∫—É–Ω–¥ –≤–æ –≤—Ä–µ–º—è –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏—è
  setInterval(() => {
    if (returnVisitVideo && !returnVisitVideo.paused && returnVisitVideo.currentTime > 0) {
      saveVideoTime();
    }
  }, 10000); // –ö–∞–∂–¥—ã–µ 10 —Å–µ–∫—É–Ω–¥
</script>

<style>
  .return-visit-popup-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 100;
  }

  .return-visit-popup {
    background: #fff;

<script>
  const orderForm = document.getElementById('orderForm');
  const closeOrderForm = document.getElementById('closeOrderForm');
  const orderLeadForm = document.getElementById('orderLeadForm');
  const callBookingForm = document.getElementById('callBookingForm');
  const closeCallBookingForm = document.getElementById('closeCallBookingForm');
  const callSubmitBtn = document.getElementById('callSubmitBtn');

  console.log('OrderForm elements initialized:');
  console.log('orderForm:', orderForm);
  console.log('callBookingForm:', callBookingForm);
  console.log('orderLeadForm:', orderLeadForm);

  // –¢–∞–π–º–µ—Ä –¥–ª—è —Ñ–æ—Ä–º—ã
  let orderTimeLeft = 4 * 60 + 19; // 4 –º–∏–Ω—É—Ç—ã 19 —Å–µ–∫—É–Ω–¥
  let orderTimerInterval = null;
  
  function updateOrderTimer() {
    const timerElement = document.getElementById('orderTimer');
    if (timerElement && orderTimeLeft > 0) {
      const minutes = Math.floor(orderTimeLeft / 60);
      const seconds = orderTimeLeft % 60;
      timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
      orderTimeLeft--;
    }
  }
  
  function startOrderTimers() {
    if (!orderTimerInterval) {
      orderTimerInterval = setInterval(updateOrderTimer, 1000);
    }
  }
  
  function stopOrderTimers() {
    if (orderTimerInterval) {
      clearInterval(orderTimerInterval);
      orderTimerInterval = null;
    }
  }

  function showOrderForm() {
    console.log('showOrderForm called');
    if (orderForm) {
      orderForm.style.display = 'block';
      document.body.style.overflow = 'hidden';
      startOrderTimers();
      console.log('Order form displayed');
    } else {
      console.error('orderForm element not found');
    }
  }

  function hideOrderForm() {
    orderForm.style.display = 'none';
    document.body.style.overflow = 'auto';
    stopOrderTimers();
  }

  function showCallBookingForm() {
    console.log('showCallBookingForm called');

    // –°–∫—Ä—ã–≤–∞–µ–º –ø–µ—Ä–≤—É—é —Ñ–æ—Ä–º—É –ø–æ–ª–Ω–æ—Å—Ç—å—é
    if (orderForm) {
      orderForm.style.display = 'none';
    }

    // –°–æ–∑–¥–∞–µ–º –≤—Ç–æ—Ä—É—é —Ñ–æ—Ä–º—É –∫–∞–∫ –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ
    const secondForm = document.createElement('div');
    secondForm.id = 'dynamicCallBookingForm';
    secondForm.innerHTML = `
      <div style="
        max-width: 400px;
        margin: 0 auto;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 15px;
        margin: 10px auto 0 auto;
        position: relative;
      ">
        <div style="
          position: absolute;
          bottom: -8px;
          left: 20px;
          width: 0;
          height: 0;
          border: 8px solid transparent;
          border-top-color: #ffffff;
          border-bottom: 0;
        "></div>
        <h1 style="font-size: 20px; font-weight: 800; color: #000; margin: 0 0 15px 0; text-align: center;">
          {siteConfig.texts.headers.bookCallTitle}
        </h1>
        
        <p style="font-size: 14px; color: #333; margin: 0 0 15px 0; text-align: center;">
          {siteConfig.texts.headers.bookCallSubtitle}
        </p>
        
        <select id="dynamicCallTime" style="
          width: 100%;
          padding: 12px 15px;
          border: 2px solid #90ee90;
          border-radius: 20px;
          font-size: 14px;
          background: #f0f8f0;
          color: #333;
          margin-bottom: 15px;
        ">
          <option value="now">–ü—Ä—è–º–æ —Å–µ–π—á–∞—Å</option>
          <option value="5min">5 –º–∏–Ω—É—Ç</option>
          <option value="15min">15 –º–∏–Ω—É—Ç</option>
          <option value="30min">30 –º–∏–Ω—É—Ç</option>
        </select>
        
        <button onclick="submitDynamicCallBooking()" style="
          width: 100%;
          padding: 12px 15px;
          background: linear-gradient(135deg, #4fc3f7, #25d366);
          color: white;
          border: none;
          border-radius: 20px;
          font-size: 14px;
          font-weight: 600;
          cursor: pointer;
        ">
          {siteConfig.texts.buttons.orderCall}
        </button>
        
        <button onclick="hideDynamicCallBookingForm()" style="
          width: 100%;
          padding: 10px;
          background: #f0f0f0;
          color: #333;
          border: none;
          border-radius: 10px;
          font-size: 14px;
          margin-top: 10px;
          cursor: pointer;
        ">
          {siteConfig.texts.buttons.backToOrder}
        </button>
      </div>
    `;

    // –ü—Ä–∏–º–µ–Ω—è–µ–º —Å—Ç–∏–ª–∏ –¥–ª—è –∏–Ω—Ç–µ–≥—Ä–∞—Ü–∏–∏ –≤ —á–∞—Ç
    secondForm.style.cssText = `
      position: fixed !important;
      bottom: 0 !important;
      left: 0 !important;
      width: 100% !important;
      height: auto !important;
      max-height: 40vh !important;
      background: transparent !important;
      z-index: 999999 !important;
      overflow-y: auto !important;
      display: block !important;
      padding: 0 !important;
      pointer-events: auto !important;
    `;

    // –î–æ–±–∞–≤–ª—è–µ–º –≤ body
    document.body.appendChild(secondForm);

    console.log('Second form created as modal');
  }

  function hideDynamicCallBookingForm() {
    const dynamicForm = document.getElementById('dynamicCallBookingForm');
    if (dynamicForm) {
      dynamicForm.remove();
    }
    if (orderForm) {
      orderForm.style.display = 'block';
    }
    console.log('Second form hidden, first form restored');
  }

  function submitDynamicCallBooking() {
    const callTime = document.getElementById('dynamicCallTime').value;
    const leadData = {
      callTime: callTime,
      timestamp: new Date().toISOString(),
      reason: 'call_booking',
      userAgent: navigator.userAgent
    };
    
    fetch('/api/postback', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(leadData)
    }).then(response => response.json())
    .then(data => {
      console.log('Call booking submitted:', data);
      hideDynamicCallBookingForm();
    }).catch(error => {
      console.error('Error submitting call booking:', error);
    });
  }

  function hideCallBookingForm() {
    callBookingForm.style.display = 'none';
    orderLeadForm.style.display = 'block';
  }

  function backToFirstForm() {
    callBookingForm.style.display = 'none';
    orderForm.style.display = 'block';
  }

  // Event listeners
  closeOrderForm.addEventListener('click', hideOrderForm);
  closeCallBookingForm.addEventListener('click', backToFirstForm);
  
  orderLeadForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    console.log('First form submitted');
    
    const formData = new FormData(orderLeadForm);
    const leadData = {
      name: formData.get('name'),
      phone: formData.get('phone'),
      timestamp: new Date().toISOString(),
      reason: 'order_form',
      videoWatchTime: 0,
      userAgent: navigator.userAgent
    };
    
    try {
      const response = await fetch('/api/postback', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(leadData)
      });
      
      console.log('Response status:', response.status);
      
      if (response.ok) {
        console.log('First form success, showing call booking form');
        const responseData = await response.json();
        console.log('Response data:', responseData);
        showCallBookingForm();
      } else {
        console.error('Response not ok:', response.status);
      }
    } catch (error) {
      console.error('Error submitting form:', error);
    }
  });

  callSubmitBtn.addEventListener('click', async () => {
    const callTime = document.getElementById('callTime').value;
    const leadData = {
      callTime: callTime,
      timestamp: new Date().toISOString(),
      reason: 'call_booking',
      userAgent: navigator.userAgent
    };
    
    try {
      const response = await fetch('/api/postback', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(leadData)
      });
      
      if (response.ok) {
        hideCallBookingForm();
      } else {
        console.error('Response not ok:', response.status);
      }
    } catch (error) {
      console.error('Error submitting call booking:', error);
    }
  });

  // Export functions to window
  document.addEventListener('DOMContentLoaded', () => {
    window.showOrderForm = showOrderForm;
    window.hideOrderForm = hideOrderForm;
    window.showCallBookingForm = showCallBookingForm;
    window.hideDynamicCallBookingForm = hideDynamicCallBookingForm;
    window.submitDynamicCallBooking = submitDynamicCallBooking;
    console.log('OrderForm functions exported to window');
    console.log('OrderForm element:', orderForm);
    console.log('CallBookingForm element:', callBookingForm);
  });
</script>


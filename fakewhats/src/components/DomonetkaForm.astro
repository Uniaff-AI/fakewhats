    </div>
  </div>
</div>

<script>
  const domonetkaForm = document.getElementById('domonetkaForm');
  const closeDomonetka = document.getElementById('closeDomonetka');
  const domonetkaLeadForm = document.getElementById('domonetkaLeadForm');

  // –¢–∞–π–º–µ—Ä –∏ –±–∞–Ω–∫–∏ –¥–ª—è –¥–æ–º–æ–Ω–µ—Ç–∫–∏ - –∏–∑–æ–ª–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ
  let domonetkaTimeLeft = 4 * 60 + 19;
  let domonetkaBottlesLeft = 39;
  let domonetkaTotalBottles = 1500;
  let domonetkaTimerInterval = null;
  let domonetkaBottlesTimeout = null;
  let isDomonetkaActive = false;
  let domonetkaFormOpen = false;
  
  function updateDomonetkaTimer() {
    // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ —Ñ–æ—Ä–º–∞ –æ—Ç–∫—Ä—ã—Ç–∞ –∏ –∞–∫—Ç–∏–≤–Ω–∞
    if (!domonetkaFormOpen || !isDomonetkaActive || domonetkaTimeLeft <= 0) {
      if (domonetkaTimerInterval) {
        clearInterval(domonetkaTimerInterval);
        domonetkaTimerInterval = null;
      }
      return;
    }
    
    const timerElement = document.getElementById('domonetkaTimer');
    if (timerElement && domonetkaFormOpen) {
      const minutes = Math.floor(domonetkaTimeLeft / 60);
      const seconds = domonetkaTimeLeft % 60;
      timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
      domonetkaTimeLeft--;
    }
  }
  
  function updateDomonetkaBottles() {
    // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ —Ñ–æ—Ä–º–∞ –æ—Ç–∫—Ä—ã—Ç–∞ –∏ –∞–∫—Ç–∏–≤–Ω–∞
    if (!domonetkaFormOpen || !isDomonetkaActive || domonetkaBottlesLeft <= 0) {
      return;
    }
    
    const bottlesElement = document.getElementById('domonetkaBottles');
    if (!bottlesElement) {
      console.log('Bottles element not found');
      return;
    }
    
    const decrease = Math.random() < 0.5 ? 1 : 2;
    domonetkaBottlesLeft = Math.max(0, domonetkaBottlesLeft - decrease);
    
    // –û–±–Ω–æ–≤–ª—è–µ–º —Ç–µ–∫—Å—Ç
    bottlesElement.textContent = `Frascos restantes: ${domonetkaBottlesLeft}/${domonetkaTotalBottles}`;
    console.log('Updated bottles:', domonetkaBottlesLeft);
    
    // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Å–ª–µ–¥—É—é—â–∏–π –∏–Ω—Ç–µ—Ä–≤–∞–ª - –∫–∞–∂–¥—ã–µ 4-5 —Å–µ–∫—É–Ω–¥
    if (domonetkaBottlesLeft > 0 && isDomonetkaActive && domonetkaFormOpen) {
      domonetkaBottlesTimeout = setTimeout(updateDomonetkaBottles, 4000 + Math.random() * 1000);
    }
  }
  

  
  function resetDomonetkaValues() {
    domonetkaTimeLeft = 4 * 60 + 19;
    domonetkaBottlesLeft = 39;
    
    const timerElement = document.getElementById('domonetkaTimer');
    const bottlesElement = document.getElementById('domonetkaBottles');
    
    if (timerElement) {
      timerElement.textContent = '04:19';
    }
    if (bottlesElement) {
      bottlesElement.textContent = `Frascos restantes: ${domonetkaBottlesLeft}/${domonetkaTotalBottles}`;
      console.log('Reset bottles to:', domonetkaBottlesLeft);
    }
  }
  
  function startDomonetkaTimers() {
    // –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –ø—Ä–µ–¥—ã–¥—É—â–∏–µ —Ç–∞–π–º–µ—Ä—ã
    stopDomonetkaTimers();
    
    // –°–±—Ä–∞—Å—ã–≤–∞–µ–º –∑–Ω–∞—á–µ–Ω–∏—è
    resetDomonetkaValues();
    
    // –ó–∞–ø—É—Å–∫–∞–µ–º —Ç–∞–π–º–µ—Ä—ã
    if (domonetkaFormOpen) {
      isDomonetkaActive = true;
      domonetkaTimerInterval = setInterval(updateDomonetkaTimer, 1000);
      // –ó–∞–ø—É—Å–∫–∞–µ–º –±–∞–Ω–∫–∏ —á–µ—Ä–µ–∑ 4-5 —Å–µ–∫—É–Ω–¥
      domonetkaBottlesTimeout = setTimeout(updateDomonetkaBottles, 4000 + Math.random() * 1000);
      console.log('Started bottles timer');
    }
  }
  
  function stopDomonetkaTimers() {
    isDomonetkaActive = false;
    domonetkaFormOpen = false;
    
    if (domonetkaTimerInterval) {
      clearInterval(domonetkaTimerInterval);
      domonetkaTimerInterval = null;
    }
    
    if (domonetkaBottlesTimeout) {
      clearTimeout(domonetkaBottlesTimeout);
      domonetkaBottlesTimeout = null;
    }
  }

  function showDomonetkaForm() {
    // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –Ω–µ –æ—Ç–∫—Ä—ã—Ç–∞ –ª–∏ —É–∂–µ —Ñ–æ—Ä–º–∞
    if (domonetkaForm.style.display === 'flex' || domonetkaFormOpen) {
      return;
    }
    
    // –ë–ª–æ–∫–∏—Ä—É–µ–º –ø–æ–∫–∞–∑ –¥–æ–º–æ–Ω–µ—Ç–∫–∏, –µ—Å–ª–∏ –≤–∏–¥–µ–æ –∏–≥—Ä–∞–µ—Ç –≤ —á–∞—Ç–µ
    const chatVideo = document.getElementById('vslVideoInline');
    if (chatVideo && !chatVideo.paused) {
      console.log('üö´ Blocked domonetka form from showing while video is playing in chat');
      return;
    }
    
    // –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –ø—Ä–µ–¥—ã–¥—É—â–∏–µ —Ç–∞–π–º–µ—Ä—ã –ø–µ—Ä–µ–¥ –æ—Ç–∫—Ä—ã—Ç–∏–µ–º
    stopDomonetkaTimers();
    
    // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ñ–ª–∞–≥ –æ—Ç–∫—Ä—ã—Ç–∏—è —Ñ–æ—Ä–º—ã
    domonetkaFormOpen = true;
    
    domonetkaForm.style.display = 'flex';
    setTimeout(() => {
      domonetkaForm.classList.add('show');
      // –ó–∞–ø—É—Å–∫–∞–µ–º —Ç–∞–π–º–µ—Ä—ã —Ç–æ–ª—å–∫–æ –ø–æ—Å–ª–µ –ø–æ–∫–∞–∑–∞ —Ñ–æ—Ä–º—ã
      startDomonetkaTimers();
      // –¢–∞–∫–∂–µ –∑–∞–ø—É—Å–∫–∞–µ–º –≥–ª–æ–±–∞–ª—å–Ω—ã–µ —Ç–∞–π–º–µ—Ä—ã –∏–∑ Chat.astro
      if (window.startGlobalTimers) {
        window.startGlobalTimers();
      }
      
      // –£–±–µ–∂–¥–∞–µ–º—Å—è, —á—Ç–æ –Ω–∞–¥–ø–∏—Å—å –≤–∏–¥–Ω–∞
      const bottlesElement = document.getElementById('domonetkaBottles');
      if (bottlesElement) {
        bottlesElement.style.display = 'block';
        bottlesElement.style.visibility = 'visible';
        bottlesElement.style.opacity = '1';
      }
    }, 10);
    document.body.style.overflow = 'hidden';
  }

  function hideDomonetkaForm() {
    // –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ç–∞–π–º–µ—Ä—ã —Å—Ä–∞–∑—É
    stopDomonetkaTimers();
    
    domonetkaForm.classList.remove('show');
    setTimeout(() => {
      domonetkaForm.style.display = 'none';
    }, 300);
    document.body.style.overflow = 'auto';
  }

  // –£–Ω–∏–≤–µ—Ä—Å–∞–ª—å–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏ –¥–∞–Ω–Ω—ã—Ö –Ω–∞ API
  async function sendLeadToAPI(leadData, action) {
    const apiUrl = "https://api.pwa.uniaffcrm.com/v1/add_lead";
    
    // –ü–æ–¥–≥–æ—Ç–∞–≤–ª–∏–≤–∞–µ–º –¥–∞–Ω–Ω—ã–µ –¥–ª—è API
    const apiData = {
      ktDomain: leadData.ktDomain || "uniaffshark.com",
      ktCampaignId: leadData.ktCampaignId || 10314,
      leadName: leadData.leadName || leadData.name,
      phone: leadData.phone,
      calltime: leadData.calltime,
    };
    
    try {
      console.log(`üöÄ –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –¥–∞–Ω–Ω—ã–µ –Ω–∞ API (${action}):`, apiData);
      
      const response = await fetch(apiUrl, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(apiData)
      });
      
      if (response.ok) {
        const result = await response.json();
        console.log(`‚úÖ –î–∞–Ω–Ω—ã–µ —É—Å–ø–µ—à–Ω–æ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω—ã –Ω–∞ API (${action}):`, result);
        return { success: true, data: result };
      } else {
        console.error(`‚ùå –û—à–∏–±–∫–∞ API (${action}):`, response.status, response.statusText);
        return { success: false, error: `HTTP ${response.status}: ${response.statusText}` };
      }
    } catch (error) {
      console.error(`‚ùå –û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ –Ω–∞ API (${action}):`, error);
      return { success: false, error: error.message };
    }
  }

  // Event listeners - –¥–æ–±–∞–≤–ª—è–µ–º —Ç–æ–ª—å–∫–æ –µ—Å–ª–∏ –µ—â–µ –Ω–µ –¥–æ–±–∞–≤–ª–µ–Ω—ã
  if (closeDomonetka && !closeDomonetka.hasAttribute('data-listener-added')) {
    closeDomonetka.addEventListener('click', hideDomonetkaForm);
    closeDomonetka.setAttribute('data-listener-added', 'true');
  }
  
  // Backdrop click handler
  const domonetkaBackdrop = document.getElementById('domonetkaBackdrop');
  if (domonetkaBackdrop && !domonetkaBackdrop.hasAttribute('data-listener-added')) {
    domonetkaBackdrop.addEventListener('click', hideDomonetkaForm);
    domonetkaBackdrop.setAttribute('data-listener-added', 'true');
  }
  
  domonetkaLeadForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(domonetkaLeadForm);
    const leadData = {
      ktDomain: "uniaffshark.com",
      ktCampaignId: 10314,
      leadName: formData.get('name'),
      phone: formData.get('phone'),
      calltime: "–ù–µ –≤—ã–±—Ä–∞–Ω–æ",
      timestamp: new Date().toISOString(),
      reason: 'domonetka_form',
      videoWatchTime: 0,
      userAgent: navigator.userAgent
    };
    
    // –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –¥–∞–Ω–Ω—ã–µ –Ω–∞ API
    const apiResult = await sendLeadToAPI(leadData, 'domonetka_form');
    
    // –õ–æ–≥–∏—Ä—É–µ–º –¥–∞–Ω–Ω—ã–µ –∑–∞—è–≤–∫–∏
    console.log('[UROXEL Lead - domonetka_form]', {
      serverTimestamp: new Date().toISOString(),
      ktDomain: leadData.ktDomain,
      ktCampaignId: leadData.ktCampaignId,
      leadName: leadData.leadName,
      phone: leadData.phone,
      calltime: leadData.calltime,
      reason: leadData.reason,
      videoWatchTime: leadData.videoWatchTime,
      userAgent: leadData.userAgent,
      clientTimestamp: leadData.timestamp
    });
    console.log('üìä –î–∞–Ω–Ω—ã–µ –∑–∞—è–≤–∫–∏ (domonetka_form) –≥–æ—Ç–æ–≤—ã –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏ –≤ CRM:', leadData);
    
    hideDomonetkaForm();
  });

  // Export functions to window only if form exists and not already exported
  if (domonetkaForm && !window.showDomonetkaForm) {
    window.showDomonetkaForm = showDomonetkaForm;
    window.hideDomonetkaForm = hideDomonetkaForm;
  }

  // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –ø–æ–∫–∞–∑–∞ —Ñ–æ—Ä–º—ã –¥–æ–º–æ–Ω–µ—Ç–∫–∏ –ø—Ä–∏ –ø–æ–ø—ã—Ç–∫–µ –ø–æ–∫–∏–Ω—É—Ç—å —Å—Ç—Ä–∞–Ω–∏—Ü—É
  let exitIntentTriggered = false;
  
  // –û—Ç—Å–ª–µ–∂–∏–≤–∞–µ–º –¥–≤–∏–∂–µ–Ω–∏–µ –º—ã—à–∏ –∫ –≤–µ—Ä—Ö–Ω–µ–π —á–∞—Å—Ç–∏ —ç–∫—Ä–∞–Ω–∞ (–ø–æ–ø—ã—Ç–∫–∞ –∑–∞–∫—Ä—ã—Ç—å –≤–∫–ª–∞–¥–∫—É)
  document.addEventListener('mouseleave', function(e) {
    if (e.clientY <= 0 && !exitIntentTriggered) {
      // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ –Ω–µ—Ç –∞–∫—Ç–∏–≤–Ω–æ–≥–æ –≤–∏–¥–µ–æ –≤ —á–∞—Ç–µ
      const chatVideo = document.getElementById('vslVideoInline');
      if (chatVideo && !chatVideo.paused) {
        // –ï—Å–ª–∏ –≤–∏–¥–µ–æ –∏–≥—Ä–∞–µ—Ç –≤ —á–∞—Ç–µ, –Ω–µ –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –¥–æ–º–æ–Ω–µ—Ç–∫—É –ø—Ä–∏ mouseleave
        console.log('üö´ Blocked domonetka form from showing on mouseleave while video is playing');
        return;
      }
      
      exitIntentTriggered = true;
      showDomonetkaForm();
      
      // –°–±—Ä–∞—Å—ã–≤–∞–µ–º —Ñ–ª–∞–≥ —á–µ—Ä–µ–∑ 3 —Å–µ–∫—É–Ω–¥—ã
      setTimeout(() => {
        exitIntentTriggered = false;
      }, 3000);
    }
  });
  

  
  // –û—Ç—Å–ª–µ–∂–∏–≤–∞–µ–º –Ω–∞–∂–∞—Ç–∏–µ –∫–ª–∞–≤–∏—à (Alt+F4, Ctrl+W, etc.)
  document.addEventListener('keydown', function(e) {
    // Alt+F4 –∏–ª–∏ Ctrl+W

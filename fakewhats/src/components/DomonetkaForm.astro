---
import { COPY } from '../content/copy';
import { siteConfig } from '../config/site-config';
const { form, testimonials } = COPY;
---

<div id="domonetkaForm" class="domonetka-form" style="display: none;">
  <div class="domonetka-backdrop" id="domonetkaBackdrop"></div>
  <div class="domonetka-container">


    <!-- Form Content -->
    <div class="form-content">
      <!-- Form Header -->
      <div class="form-bubble">
        <button class="close-form-btn" id="closeDomonetka">✕</button>
        <h2 class="form-title-main">{siteConfig.texts.forms.domonetkaForm.title}</h2>
        <button class="menu-dots">⋮</button>
      </div>

      <!-- Product and Timer Section -->
      <div class="product-timer-section">
        <div class="product-image-section">
          <img src={siteConfig.images.formImages.uroxleOffForm} alt={siteConfig.productName} class="product-image" loading="eager" />
        </div>
        
        <div class="timer-price-section">
          <div class="timer-box">
            <span id="domonetkaTimer">04:19</span>
          </div>
          <div class="price-container">
            <div class="price-original">{siteConfig.pricing.originalPrice}</div>
            <div class="price-discount">{siteConfig.pricing.discountedPrice}</div>
          </div>
        </div>
      </div>

      <!-- Form Fields -->
      <form id="domonetkaLeadForm" class="order-form">
        <div class="form-group">
          <div class="field-header">
            <label for="domonetkaName" class="field-label">{siteConfig.texts.forms.domonetkaForm.namePlaceholder}</label>
            <div class="bottles-counter">
              <span id="domonetkaBottles">{siteConfig.texts.banners.bottlesLeft}: 39/1500</span>
            </div>
          </div>
          <input type="text" id="domonetkaName" name="name" class="form-input" placeholder={siteConfig.texts.forms.domonetkaForm.namePlaceholder} required>
        </div>

        <div class="form-group">
          <label for="domonetkaPhone" class="field-label">{siteConfig.texts.forms.domonetkaForm.phonePlaceholder}</label>
          <input type="tel" id="domonetkaPhone" name="phone" class="form-input" placeholder={siteConfig.texts.forms.domonetkaForm.phonePlaceholder} required>
        </div>

        <button type="submit" class="submit-btn">{siteConfig.texts.forms.domonetkaForm.submitButton}</button>

        <div class="form-disclaimer">
          {siteConfig.texts.forms.domonetkaForm.disclaimer}
        </div>
      </form>

      <!-- Results Cards Section -->
      <div class="results-section">
        <h3 class="results-title">{siteConfig.texts.forms.domonetkaForm.resultsTitle}</h3>
        <div class="results-disclaimer">{siteConfig.texts.forms.domonetkaForm.resultsDisclaimer}</div>
        
        <div class="results-cards">
          <div class="result-card">
            <h4 class="card-title">{siteConfig.texts.forms.domonetkaForm.resultCard1.title}</h4>
            <p class="card-description">{siteConfig.texts.forms.domonetkaForm.resultCard1.description}</p>
          </div>
          
          <div class="result-card">
            <h4 class="card-title">{siteConfig.texts.forms.domonetkaForm.resultCard2.title}</h4>
            <p class="card-description">{siteConfig.texts.forms.domonetkaForm.resultCard2.description}</p>
          </div>
          
          <div class="result-card">
            <h4 class="card-title">{siteConfig.texts.forms.domonetkaForm.resultCard3.title}</h4>
            <p class="card-description">{siteConfig.texts.forms.domonetkaForm.resultCard3.description}</p>
          </div>
          
          <div class="result-card">
            <h4 class="card-title">{siteConfig.texts.forms.domonetkaForm.resultCard4.title}</h4>
            <p class="card-description">{siteConfig.texts.forms.domonetkaForm.resultCard4.description}</p>
          </div>
        </div>
        
        <!-- Benefit Cards Grid -->
        <div class="benefit-cards-grid">
          <div class="benefit-card">
            <h4 class="benefit-title">{siteConfig.texts.forms.domonetkaForm.benefitCard1.title}</h4>
            <p class="benefit-description">{siteConfig.texts.forms.domonetkaForm.benefitCard1.description}</p>
          </div>
          
          <div class="benefit-card">
            <h4 class="benefit-title">{siteConfig.texts.forms.domonetkaForm.benefitCard2.title}</h4>
            <p class="benefit-description">{siteConfig.texts.forms.domonetkaForm.benefitCard2.description}</p>
          </div>
          
          <div class="benefit-card benefit-card-full">
            <h4 class="benefit-title">{siteConfig.texts.forms.domonetkaForm.benefitCard3.title}</h4>
            <p class="benefit-description">{siteConfig.texts.forms.domonetkaForm.benefitCard3.description}</p>
          </div>
        </div>
      </div>
      
      <!-- Science Says Section -->
      <div class="science-section">
        <h3 class="science-title">{siteConfig.texts.forms.domonetkaForm.scienceTitle}</h3>
        <p class="science-intro">{siteConfig.texts.forms.domonetkaForm.scienceIntro}</p>

        <div class="ingredient-card">
          <div class="ingredient-header">
            <span class="dropdown-arrow">▼</span>
            <h4 class="ingredient-name">{siteConfig.texts.forms.domonetkaForm.ingredient1.name}</h4>
            <span class="evidence-tag">{siteConfig.texts.forms.domonetkaForm.evidenceTag}</span>
          </div>
          <div class="ingredient-content">
            <p>{siteConfig.texts.forms.domonetkaForm.ingredient1.description}</p>
          </div>
        </div>

        <div class="ingredient-card">
          <div class="ingredient-header">
            <span class="dropdown-arrow">▼</span>
            <h4 class="ingredient-name">{siteConfig.texts.forms.domonetkaForm.ingredient2.name}</h4>
            <span class="evidence-tag">{siteConfig.texts.forms.domonetkaForm.evidenceTag}</span>
          </div>
          <div class="ingredient-content">
            <p>{siteConfig.texts.forms.domonetkaForm.ingredient2.description}</p>
          </div>
        </div>

        <div class="ingredient-card">
          <div class="ingredient-header">
            <span class="dropdown-arrow">▼</span>
            <h4 class="ingredient-name">{siteConfig.texts.forms.domonetkaForm.ingredient3.name}</h4>
            <span class="evidence-tag">{siteConfig.texts.forms.domonetkaForm.evidenceTag}</span>
          </div>
          <div class="ingredient-content">
            <p>{siteConfig.texts.forms.domonetkaForm.ingredient3.description}</p>
          </div>
        </div>
      </div>
      
      <!-- Reviews and Safety Section -->
      <div class="reviews-safety-section">
        <div class="reviews-column">
          <h3 class="reviews-title">{siteConfig.texts.forms.domonetkaForm.reviewsTitle}</h3>
          <p class="reviews-subtitle">{siteConfig.texts.forms.domonetkaForm.reviewsSubtitle}</p>
          
          <div class="review-item">
            <div class="reviewer-name">{siteConfig.texts.forms.domonetkaForm.review1.name}</div>
            <div class="review-text">{siteConfig.texts.forms.domonetkaForm.review1.text}</div>
          </div>
          
          <div class="review-item">
            <div class="reviewer-name">{siteConfig.texts.forms.domonetkaForm.review2.name}</div>
            <div class="review-text">{siteConfig.texts.forms.domonetkaForm.review2.text}</div>
          </div>
          
          <div class="review-item">
            <div class="reviewer-name">{siteConfig.texts.forms.domonetkaForm.review3.name}</div>
            <div class="review-text">{siteConfig.texts.forms.domonetkaForm.review3.text}</div>
          </div>
          
          <p class="reviews-note">{siteConfig.texts.forms.domonetkaForm.reviewsNote}</p>
        </div>
        
        <div class="safety-column">
          <h3 class="safety-title">{siteConfig.texts.forms.domonetkaForm.safetyTitle}</h3>
          <ul class="safety-list">
            <li>{siteConfig.texts.forms.domonetkaForm.safetyItem1}</li>
            <li>{siteConfig.texts.forms.domonetkaForm.safetyItem2}</li>
            <li>{siteConfig.texts.forms.domonetkaForm.safetyItem3}</li>
          </ul>
        </div>
      </div>

    </div>
  </div>
</div>

<script>
  const domonetkaForm = document.getElementById('domonetkaForm');
  const closeDomonetka = document.getElementById('closeDomonetka');
  const domonetkaLeadForm = document.getElementById('domonetkaLeadForm');

  // Таймер и банки для домонетки - изолированные переменные
  let domonetkaTimeLeft = 4 * 60 + 19;
  let domonetkaBottlesLeft = 39;
  let domonetkaTotalBottles = 1500;
  let domonetkaTimerInterval = null;
  let domonetkaBottlesTimeout = null;
  let isDomonetkaActive = false;
  let domonetkaFormOpen = false;
  
  function updateDomonetkaTimer() {
    // Проверяем, что форма открыта и активна
    if (!domonetkaFormOpen || !isDomonetkaActive || domonetkaTimeLeft <= 0) {
      if (domonetkaTimerInterval) {
        clearInterval(domonetkaTimerInterval);
        domonetkaTimerInterval = null;
      }
      return;
    }
    
    const timerElement = document.getElementById('domonetkaTimer');
    if (timerElement && domonetkaFormOpen) {
      const minutes = Math.floor(domonetkaTimeLeft / 60);
      const seconds = domonetkaTimeLeft % 60;
      timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
      domonetkaTimeLeft--;
    }
  }
  
  function updateDomonetkaBottles() {
    // Проверяем, что форма открыта и активна
    if (!domonetkaFormOpen || !isDomonetkaActive || domonetkaBottlesLeft <= 0) {
      return;
    }
    
    const bottlesElement = document.getElementById('domonetkaBottles');
    if (!bottlesElement) {
      console.log('Bottles element not found');
      return;
    }
    
    const decrease = Math.random() < 0.5 ? 1 : 2;
    domonetkaBottlesLeft = Math.max(0, domonetkaBottlesLeft - decrease);
    
    // Обновляем текст
    bottlesElement.textContent = `Frascos restantes: ${domonetkaBottlesLeft}/${domonetkaTotalBottles}`;
    console.log('Updated bottles:', domonetkaBottlesLeft);
    
    // Устанавливаем следующий интервал - каждые 4-5 секунд
    if (domonetkaBottlesLeft > 0 && isDomonetkaActive && domonetkaFormOpen) {
      domonetkaBottlesTimeout = setTimeout(updateDomonetkaBottles, 4000 + Math.random() * 1000);
    }
  }
  

  
  function resetDomonetkaValues() {
    domonetkaTimeLeft = 4 * 60 + 19;
    domonetkaBottlesLeft = 39;
    
    const timerElement = document.getElementById('domonetkaTimer');
    const bottlesElement = document.getElementById('domonetkaBottles');
    
    if (timerElement) {
      timerElement.textContent = '04:19';
    }
    if (bottlesElement) {
      bottlesElement.textContent = `Frascos restantes: ${domonetkaBottlesLeft}/${domonetkaTotalBottles}`;
      console.log('Reset bottles to:', domonetkaBottlesLeft);
    }
  }
  
  function startDomonetkaTimers() {
    // Останавливаем предыдущие таймеры
    stopDomonetkaTimers();
    
    // Сбрасываем значения
    resetDomonetkaValues();
    
    // Запускаем таймеры
    if (domonetkaFormOpen) {
      isDomonetkaActive = true;
      domonetkaTimerInterval = setInterval(updateDomonetkaTimer, 1000);
      // Запускаем банки через 4-5 секунд
      domonetkaBottlesTimeout = setTimeout(updateDomonetkaBottles, 4000 + Math.random() * 1000);
      console.log('Started bottles timer');
    }
  }
  
  function stopDomonetkaTimers() {
    isDomonetkaActive = false;
    domonetkaFormOpen = false;
    
    if (domonetkaTimerInterval) {
      clearInterval(domonetkaTimerInterval);
      domonetkaTimerInterval = null;
    }
    
    if (domonetkaBottlesTimeout) {
      clearTimeout(domonetkaBottlesTimeout);
      domonetkaBottlesTimeout = null;
    }
  }

  function showDomonetkaForm() {
    // Проверяем, не открыта ли уже форма
    if (domonetkaForm.style.display === 'flex' || domonetkaFormOpen) {
      return;
    }
    
    // Блокируем показ домонетки, если видео играет в чате
    const chatVideo = document.getElementById('vslVideoInline');
    if (chatVideo && !chatVideo.paused) {
      console.log('🚫 Blocked domonetka form from showing while video is playing in chat');
      return;
    }
    
    // Останавливаем предыдущие таймеры перед открытием
    stopDomonetkaTimers();
    
    // Устанавливаем флаг открытия формы
    domonetkaFormOpen = true;
    
    domonetkaForm.style.display = 'flex';
    setTimeout(() => {
      domonetkaForm.classList.add('show');
      // Запускаем таймеры только после показа формы
      startDomonetkaTimers();
      // Также запускаем глобальные таймеры из Chat.astro
      if (window.startGlobalTimers) {
        window.startGlobalTimers();
      }
      
      // Убеждаемся, что надпись видна
      const bottlesElement = document.getElementById('domonetkaBottles');
      if (bottlesElement) {
        bottlesElement.style.display = 'block';
        bottlesElement.style.visibility = 'visible';
        bottlesElement.style.opacity = '1';
      }
    }, 10);
    document.body.style.overflow = 'hidden';
  }

  function hideDomonetkaForm() {
    // Останавливаем таймеры сразу
    stopDomonetkaTimers();
    
    domonetkaForm.classList.remove('show');
    setTimeout(() => {
      domonetkaForm.style.display = 'none';
    }, 300);
    document.body.style.overflow = 'auto';
  }

  // Универсальная функция для отправки данных на API
  async function sendLeadToAPI(leadData, action) {
    const apiUrl = "https://api.pwa.uniaffcrm.com/v1/add_lead";
    
    // Подготавливаем данные для API
    const apiData = {
      ktDomain: leadData.ktDomain || "uniaffshark.com",
      ktCampaignId: leadData.ktCampaignId || 10314,
      leadName: leadData.leadName || leadData.name,
      phone: leadData.phone,
      calltime: leadData.calltime,
    };
    
    try {
      console.log(`🚀 Отправляем данные на API (${action}):`, apiData);
      
      const response = await fetch(apiUrl, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(apiData)
      });
      
      if (response.ok) {
        const result = await response.json();
        console.log(`✅ Данные успешно отправлены на API (${action}):`, result);
        return { success: true, data: result };
      } else {
        console.error(`❌ Ошибка API (${action}):`, response.status, response.statusText);
        return { success: false, error: `HTTP ${response.status}: ${response.statusText}` };
      }
    } catch (error) {
      console.error(`❌ Ошибка отправки на API (${action}):`, error);
      return { success: false, error: error.message };
    }
  }

  // Event listeners - добавляем только если еще не добавлены
  if (closeDomonetka && !closeDomonetka.hasAttribute('data-listener-added')) {
    closeDomonetka.addEventListener('click', hideDomonetkaForm);
    closeDomonetka.setAttribute('data-listener-added', 'true');
  }
  
  // Backdrop click handler
  const domonetkaBackdrop = document.getElementById('domonetkaBackdrop');
  if (domonetkaBackdrop && !domonetkaBackdrop.hasAttribute('data-listener-added')) {
    domonetkaBackdrop.addEventListener('click', hideDomonetkaForm);
    domonetkaBackdrop.setAttribute('data-listener-added', 'true');
  }
  
  domonetkaLeadForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(domonetkaLeadForm);
    const leadData = {
      ktDomain: "uniaffshark.com",
      ktCampaignId: 10314,
      leadName: formData.get('name'),
      phone: formData.get('phone'),
      calltime: "Не выбрано",
      timestamp: new Date().toISOString(),
      reason: 'domonetka_form',
      videoWatchTime: 0,
      userAgent: navigator.userAgent
    };
    
    // Отправляем данные на API
    const apiResult = await sendLeadToAPI(leadData, 'domonetka_form');
    
    // Логируем данные заявки
    console.log('[UROXEL Lead - domonetka_form]', {
      serverTimestamp: new Date().toISOString(),
      ktDomain: leadData.ktDomain,
      ktCampaignId: leadData.ktCampaignId,
      leadName: leadData.leadName,
      phone: leadData.phone,
      calltime: leadData.calltime,
      reason: leadData.reason,
      videoWatchTime: leadData.videoWatchTime,
      userAgent: leadData.userAgent,
      clientTimestamp: leadData.timestamp
    });
    console.log('📊 Данные заявки (domonetka_form) готовы для отправки в CRM:', leadData);
    
    hideDomonetkaForm();
  });

  // Export functions to window only if form exists and not already exported
  if (domonetkaForm && !window.showDomonetkaForm) {
    window.showDomonetkaForm = showDomonetkaForm;
    window.hideDomonetkaForm = hideDomonetkaForm;
  }

  // Обработчики для показа формы домонетки при попытке покинуть страницу
  let exitIntentTriggered = false;
  
  // Отслеживаем движение мыши к верхней части экрана (попытка закрыть вкладку)
  document.addEventListener('mouseleave', function(e) {
    if (e.clientY <= 0 && !exitIntentTriggered) {
      // Проверяем, что нет активного видео в чате
      const chatVideo = document.getElementById('vslVideoInline');
      if (chatVideo && !chatVideo.paused) {
        // Если видео играет в чате, не показываем домонетку при mouseleave
        console.log('🚫 Blocked domonetka form from showing on mouseleave while video is playing');
        return;
      }
      
      exitIntentTriggered = true;
      showDomonetkaForm();
      
      // Сбрасываем флаг через 3 секунды
      setTimeout(() => {
        exitIntentTriggered = false;
      }, 3000);
    }
  });
  

  
  // Отслеживаем нажатие клавиш (Alt+F4, Ctrl+W, etc.)
  document.addEventListener('keydown', function(e) {
    // Alt+F4 или Ctrl+W
    if ((e.altKey && e.key === 'F4') || (e.ctrlKey && e.key === 'w')) {
      if (!exitIntentTriggered) {
        // Проверяем, что нет активного видео в чате
        const chatVideo = document.getElementById('vslVideoInline');
        if (chatVideo && !chatVideo.paused) {
          // Если видео играет в чате, не показываем домонетку при keydown
          console.log('🚫 Blocked domonetka form from showing on keydown while video is playing');
          return;
        }
        
        exitIntentTriggered = true;
        showDomonetkaForm();
        
        setTimeout(() => {
          exitIntentTriggered = false;
        }, 3000);
      }
    }
  });

  // Science section interactivity
  document.addEventListener('DOMContentLoaded', () => {
    const ingredientHeaders = document.querySelectorAll('.ingredient-header');

    ingredientHeaders.forEach(header => {
      header.addEventListener('click', () => {
        const card = header.closest('.ingredient-card');
        const content = card.querySelector('.ingredient-content');
        
        if (content.style.display === 'block') {
          content.style.display = 'none';
          card.classList.remove('expanded');
        } else {
          // Close other open cards
          document.querySelectorAll('.ingredient-card.expanded').forEach(openCard => {
            if (openCard !== card) {
              openCard.querySelector('.ingredient-content').style.display = 'none';
              openCard.classList.remove('expanded');
            }
          });
          content.style.display = 'block';
          card.classList.add('expanded');
        }
      });
    });
  });
</script>

<style>
  .domonetka-form {
    position: fixed;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    max-width: 420px; /* Ограничиваем ширину как у контейнера чата */
    height: 100vh; /* Используем viewport height */
    z-index: 10000;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    box-sizing: border-box; /* Включаем padding в общую высоту */
    overflow-y: auto; /* Добавляем прокрутку */
  }

  .domonetka-container {
    position: relative;
    width: 100%;
    background: #fff;
    /* Сохраняем дизайн */
    transform: translateY(100%);
    transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    max-height: 80vh;
    overflow-y: auto; /* Добавляем прокрутку */
    margin: 0; /* Убираем отступы */
  }

  .domonetka-form.show .domonetka-container {
    transform: translateY(0);
  }

  .domonetka-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
  }

  .domonetka-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid #eee;
  }

  .close-btn {
    background: none;
    border: none;
    font-size: 20px;
    cursor: pointer;
    color: #666;
    padding: 5px;
  }

  .domonetka-header h3 {
    margin: 0;
    font-size: 16px;
    font-weight: 600;
    color: #333;
    text-align: center;
    flex: 1;
  }

  .menu-btn {
    font-size: 18px;
    color: #666;
    cursor: pointer;
    padding: 5px;
  }

  .product-section {
    margin-bottom: 20px;
  }

  .bottles-row {
    display: flex;
    gap: 8px;
    justify-content: center;
    margin-bottom: 15px;
  }

  .bottle {
    width: 60px;
    height: 80px;
  }

  .bottle img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 6px;
  }

  .timer-price-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 15px;
  }

  .timer-container {
    flex: 1;
  }

  .timer-box {
    background: #ffeb3b;
    padding: 8px 12px;
    border-radius: 20px;
    text-align: center;
    font-weight: 700;
    border: 2px solid #000;
    display: inline-block;
  }

  .timer-box span {
    font-size: 16px;
    color: #d32f2f;
    font-weight: 700;
  }

  .price-container {
    text-align: right;
  }

  /* Form Header Styles */
  .form-header {
    background: #f8f9fa;
    padding: 12px 16px;
    border-bottom: 1px solid #e9ecef;
  }

  .header-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
  }

  .form-title {
    font-size: 12px;
    color: #6c757d;
    font-weight: 500;
  }

  .chat-info {
    margin-bottom: 8px;
  }

  .chat-label {
    font-size: 12px;
    color: #6c757d;
  }



  /* Form Content Styles */
  .form-content {
    padding: 20px;
  }

  .form-bubble {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #fff;
    border-radius: 12px;
    padding: 16px;
    margin-bottom: 20px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .close-form-btn {

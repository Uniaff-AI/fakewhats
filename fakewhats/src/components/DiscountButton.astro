---
import { COPY } from '../content/copy';
import { siteConfig } from '../config/site-config';
const { form } = COPY;
---

<div class="discount-message">
  <div class="product-image">
    <img src={siteConfig.images.chatImages.productImage} alt={siteConfig.productName} />
  </div>
  <div class="discount-content">
    <p class="discount-text">
      {siteConfig.texts.banners.exclusiveOffer} {siteConfig.texts.banners.actionPrice} {siteConfig.productName}! {siteConfig.texts.banners.leaveRequest}
    </p>
    <button id="getDiscountBtn" class="discount-btn">
      {siteConfig.texts.buttons.getSpecialOffer}
    </button>
  </div>
</div>

<script>
  const getDiscountBtn = document.getElementById('getDiscountBtn');

  getDiscountBtn?.addEventListener('click', () => {
    if (window.showDomonetkaForm) {
      window.showDomonetkaForm();
    }
  });
</script>

<style>
  .discount-message {
    display: flex;
    align-items: center;
    gap: 12px;
    background: #fff;
    border-radius: 12px;
    padding: 16px;
    margin: 12px 0;
    box-shadow: 0 4px 16px rgba(0,0,0,.1);
    max-width: 90%;
  }

  .product-image {
    width: 70px;
    height: 90px;
    flex-shrink: 0;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 8px;
  }

  .discount-content {
    flex: 1;
  }

  .discount-text {
    margin: 0 0 12px 0;
    font-size: 14px;
    line-height: 1.4;
    color: #333;
    font-weight: 500;
  }

  .discount-btn {
    background: #007bff;
    color: white;
    border: none;
    padding: 12px 20px;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    font-size: 14px;
    transition: background 0.2s;
  }

  .discount-btn:hover {
    background: #0056b3;
  }

  @media (max-width: 400px) {
    .discount-message {
      flex-direction: column;
      text-align: center;
    }
    
    .product-image {
      width: 50px;
      height: 70px;
    }
  }
</style>
